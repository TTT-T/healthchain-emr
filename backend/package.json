{
  "name": "emr-backend",
  "version": "1.0.0",
  "description": "EMR System Backend with Authentication & Authorization",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:contract": "jest --testPathPattern=contract",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:init": "tsx src/scripts/db-cli.ts init",
    "db:reset": "tsx src/scripts/db-cli.ts reset --force",
    "perf:api": "node src/scripts/performance-test.js",
    "perf:db": "tsx src/scripts/database-performance-test.ts",
    "perf:concurrent": "node src/scripts/concurrent-users-test.js",
    "perf:all": "npm run perf:api && npm run perf:db && npm run perf:concurrent",
    "db:status": "tsx src/scripts/db-cli.ts status",
    "db:health": "tsx src/scripts/db-cli.ts health",
    "db:migrations": "tsx src/scripts/db-cli.ts migrations",
    "db:migrate": "tsx src/scripts/db-cli.ts migrate",
    "db:migrate:up": "tsx src/scripts/db-cli.ts migrate:up",
    "db:migrate:down": "tsx src/scripts/db-cli.ts migrate:down",
    "db:create-db": "tsx src/scripts/db-cli.ts create-db",
    "db:create-user": "tsx src/scripts/db-cli.ts create-user",
    "db:test-connection": "tsx src/scripts/db-cli.ts test",
    "db:test-full": "tsx src/scripts/test-database.ts",
    "db:config": "tsx src/scripts/db-cli.ts config",
    "db:seed": "tsx src/scripts/db-cli.ts seed",
    "db:cli": "tsx src/scripts/db-cli.ts",
    "test:api": "tsx src/scripts/test-api.ts",
    "test:email": "tsx src/scripts/test-email-service.ts",
    "validate": "npm run type-check && npm run lint && npm run test:contract",
    "validate:system": "tsx src/scripts/validate-system.ts",
    "pre-commit": "npm run validate && npm run test",
    "test:all": "npm run test && npm run test:contract && npm run test:e2e && npm run test:api",
    "validate:all": "npm run validate && npm run validate:system"
  },
  "keywords": [
    "emr",
    "healthcare",
    "backend",
    "authentication",
    "authorization"
  ],
  "author": "EMR Development Team",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.4",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.1",
    "react-hot-toast": "^2.6.0",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.4",
    "@types/node-cache": "^4.2.5",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.10",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "artillery": "^2.0.24",
    "autocannon": "^8.0.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "k6": "^0.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**",
      "!src/scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "testTimeout": 10000
  }
}
